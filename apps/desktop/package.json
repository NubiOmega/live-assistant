{
  "name": "live-assistant-desktop",
  "version": "0.1.0",
  "description": "Electron + React desktop dashboard for Live Assistant.",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "wait-on": "^7.2.0",
    "vite": "^5.2.0"
  }
}